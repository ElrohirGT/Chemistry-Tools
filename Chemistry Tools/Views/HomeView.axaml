<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="clr-namespace:Markdown.Avalonia;assembly=Markdown.Avalonia"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ctxt="clr-namespace:ColorTextBlock.Avalonia;assembly=ColorTextBlock.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Chemistry_Tools.Views.HomeView">
        <ScrollViewer>
          <md:MarkdownScrollViewer
            Source="https://chemistry-tools.netlify.app/CHANGELOG.md">
            <md:MarkdownScrollViewer.Styles>
              <Style Selector="ctxt|CTextBlock.Heading1, ctxt|CTextBlock.Heading2">
                <Setter Property="Foreground" Value="{DynamicResource DefaultTextForegroundThemeBrush}"/>
              </Style>
            </md:MarkdownScrollViewer.Styles>
           </md:MarkdownScrollViewer> 
      </ScrollViewer>
</UserControl>
