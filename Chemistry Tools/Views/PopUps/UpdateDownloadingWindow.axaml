<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Chemistry_Tools.ViewModels"
        Width="250" Height="100"
        Padding="10"
        mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="100"
        x:Class="Chemistry_Tools.Views.PopUps.UpdateDownloadingWindow"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterOwner"
        Title="Actualización">
  <Design.DataContext>
    <vm:UpdateDownloadingViewModel/>
  </Design.DataContext>
  <StackPanel Orientation="Vertical">
    <TextBlock Text="Descargando actualización..." Margin="0,0,0,10"/>
    <ProgressBar IsVisible="{Binding !HasError}" Value="{Binding DownloadProgress}" ShowProgressText="True" Margin="0,0,0,5"/>
    <TextBlock IsVisible="{Binding HasError}" Text="{Binding DownloadError}" TextWrapping="Wrap" HorizontalAlignment="Stretch"/>
    <Button IsVisible="{Binding !HasError}" HorizontalAlignment="Center" Command="{Binding CancelDownloadCommand}" CommandParameter="{StaticResource True}">Cancelar</Button>
    <Button IsVisible="{Binding HasError}" Command="{Binding CancelDownloadCommand}" CommandParameter="{StaticResource True}" HorizontalAlignment="Center">Aceptar</Button>
  </StackPanel>
</Window>
