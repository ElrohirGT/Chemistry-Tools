<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Chemistry_Tools.ViewModels"
        xmlns:updater="using:NetSparkleUpdater"
        Width="400" Height="NaN"
        Padding="20"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="NaN"
        x:Class="Chemistry_Tools.Views.PopUps.UpdatePopUpWindow"
        Icon="/Assets/icon.ico"
        WindowStartupLocation="CenterOwner"
        Title="Actualización">

  <Design.DataContext>
    <vm:UpdatePopUpViewModel/>
  </Design.DataContext>
  <StackPanel Orientation="Vertical">
    <StackPanel DataContext="{Binding AppCastItem}" Orientation="Vertical">
      <TextBlock Text="Hay una nueva versión disponible!" FontSize="20"/>
      <TextBlock Text="{Binding AppVersionInstalled, StringFormat=Actual: {0}}"/>
      <TextBlock Text="{Binding Version, StringFormat=Nueva: {0}}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
      <Button Command="{Binding CloseDialogCommand}" CommandParameter="{StaticResource True}" IsEnabled="True">Descargar</Button>
      <Button Command="{Binding CloseDialogCommand}" CommandParameter="{StaticResource False}" IsEnabled="True">Omitir</Button>
    </StackPanel>
  </StackPanel>

</Window>